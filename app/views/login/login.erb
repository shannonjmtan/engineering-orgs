<div class="engr-jumbotron engr-jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1>Login</h1>
        <p>
          To edit content, please login.
        </p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <%= form_for :login, :url => create_login_path, :html => { :class => "form-horizontal" } do |f| %>

      <% if flash[:login] %>
        <%= flash[:login] %>
      <% end %>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div class="form-group">
        <%= f.submit 'Login', :class => 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

</div>
