<div class="engr-jumbotron engr-jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1>Admin Dashboard</h1>
      </div>
    </div>
  </div>
</div>

<div class="container">
<div class="row">

<div class="container col-md-3">
  <div class="row text-center">
   <h4>Admin Functions</h4>
    <ul class="nav nav-tabs nav-stacked">
      <li><%= link_to 'Edit Your Profile', edit_user_path(@user.id) %></li>
      <% if @user.site_admin %>
        <li><%= link_to 'View All Users', users_path %></li>
        <li><%= link_to 'Create New User', new_user_path %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container col-md-9">
  <div class="row">
    <table class="table table-hover table-striped table-responsive">
      <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @clubs.each do |club| %>
        <tr>
          <td><%= club.name %></td>
          <td><%= link_to 'Show', club %></td>
          <td><%= link_to 'Edit', edit_club_path(club) %></td>
          <td><%= link_to 'Destroy', club, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Create New Club', new_club_path, :class => 'btn btn-primary' %>
  </div>
</div>
</div>
</div>