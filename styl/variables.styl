// Semantic Grid Overrides
total-width = 100%
grid-max-width = 1140px

// Breakpoints
desktop = 'only screen and (min-width: 961px)'
small-desktop = 'only screen and (max-width: 960px)'
tablet = 'only screen and (max-width: 768px)'
mobile = 'only screen and (max-width: 480px)'

// Typography
font-family = 'oceania', sans-serif
font-size = 16px

// Colors
color-main = #1b5d9e
color-accent = #eae848
color-text = #2d2f31
color-light = #616153

// Navigation and header
nav-text-color = white
nav-height = 70px
header-large-height = 650px
header-height = 280px
